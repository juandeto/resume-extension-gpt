{
  "name": "Pollux",
  "version": "1.1.1",
  "description": "Summarize and explain: instant processing of selected text with GPT while browsing.",
  "permissions": [
    "tabs",
    "scripting"
  ],
  "icons": {
    "16": "./assets/magic-wand.png",
    "32": "./assets/magic-wand.png",
    "48": "./assets/magic-wand.png",
